@model IEnumerable<NguyenMinhTrieu_BigSchool.Models.Course>

@{
    ViewBag.Title = "Attending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row" style="padding-top:30px">
    <h2>Attending</h2>
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.Datetime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.Datetime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecture">
                        @course.LectureName
                    </span>
                    <br />
                    <span class="category">
                        @course.Category.Name
                        <button data-course-id="@course.Id" class="btn btn-info btn-sm js-tongle-attendance">Going</button>
                    </span>
                </div>
            </li>
        }
    </ul>
    @section scripts{
        <script>
            $(document).ready(function () {

                $(".js-tongle-attendance").click(function (e) {
                    var button = $(e.target);
                    $.post("/api/attendances", {
                        Id: button.attr("data-course-id")
                    })
                        .done(function (result) {
                            if (result == "cancel") {
                                alert("cancel register course successfully")
                                button
                                    .removeClass("btn-info")
                                    .addClass("btn-default")
                                    .text("Going?");
                                window.location.reload();
                            }
                            else {
                                alert("Register course successfully")
                                button
                                    .removeClass("btn-default")
                                    .addClass("btn-info")
                                    .text("Going");
                            }

                        }).fail(function () {
                            alert("Something fail");
                        });
                });

            });
        </script>
    }
</div>